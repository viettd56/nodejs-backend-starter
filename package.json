{
    "name": "node-backend-starter",
    "version": "0.0.1",
    "private": true,
    "author": "viettd",
    "scripts": {
        "start": "pm2-runtime start /app/ecosystem.config.js",
        "dev": "NODE_ENV=dev DEBUG=api:* DOTENV_FILE=.env pm2-runtime start ./ecosystem.dev.config.js",
        "seed_db": "NODE_ENV=test DOTENV_FILE=.env.test ts-node ./src/seedDB.ts",
        "test": "NODE_ENV=test DOTENV_FILE=.env.test jest --maxWorkers=4 --forceExit",
        "test_ci": "NODE_ENV=test_ci DOTENV_FILE=.env.ci jest --maxWorkers=4 --forceExit",
        "watch": "concurrently \"gulp init\" \"ttsc -w -p ttsconfig.dev.json\" \"graphql-codegen --config codegen-watch.yml\" \"yarn gulp\"",
        "codegen": "graphql-codegen --config codegen.yml",
        "build": "gulp init && yarn codegen && ttsc -p ttsconfig.json"
    },
    "dependencies": {
        "@hapi/joi": "15.1.1",
        "apollo-server-cache-redis": "^1.2.2",
        "apollo-server-express": "^2.15.1",
        "awilix": "^4.2.6",
        "axios": "0.19.2",
        "bcryptjs": "^2.4.3",
        "bull": "3.15.0",
        "compression": "1.7.4",
        "cors": "2.8.5",
        "dataloader": "^2.0.0",
        "dotenv": "^8.2.0",
        "escape-string-regexp": "4.0.0",
        "express": "4.17.1",
        "extend": "^3.0.2",
        "graphql": "14.2.1",
        "graphql-depth-limit": "1.1.0",
        "graphql-extensions": "^0.12.4",
        "graphql-format-error-context-extension": "^0.2.15",
        "graphql-tools": "6.0.12",
        "helmet": "3.23.3",
        "i18next": "^19.5.3",
        "ioredis": "4.17.3",
        "json-stringify-safe": "5.0.1",
        "jsonwebtoken": "8.5.1",
        "lodash": "4.17.15",
        "moleculer": "0.13.11",
        "moleculer-jaeger": "0.2.2",
        "moment-timezone": "0.5.31",
        "mongo-uri-builder": "^3.2.2",
        "mongodb-uri": "^0.9.7",
        "mongoose": "^5.10.13",
        "morgan": "1.10.0",
        "nats": "^1.4.9",
        "pino": "^6.3.2",
        "randomatic": "3.1.1",
        "safe-regex": "2.1.1"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^1.16.0",
        "@graphql-codegen/typescript": "1.16.0",
        "@graphql-codegen/typescript-resolvers": "^1.16.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/bull": "^3.14.0",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^8.2.0",
        "@types/escape-string-regexp": "^2.0.1",
        "@types/faker": "^4.1.12",
        "@types/hapi__joi": "^15.0.4",
        "@types/helmet": "^0.0.47",
        "@types/i18next": "^13.0.0",
        "@types/ioredis": "^4.17.0",
        "@types/jest": "^26.0.3",
        "@types/json-stringify-safe": "^5.0.0",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/lodash": "^4.14.157",
        "@types/moment-timezone": "^0.5.13",
        "@types/mongodb-uri": "^0.9.0",
        "@types/mongoose": "^5.10.0",
        "@types/morgan": "^1.9.1",
        "@types/pino": "^6.3.0",
        "@types/rimraf": "^3.0.0",
        "@types/safe-regex": "^1.1.2",
        "@types/uuid": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^3.5.0",
        "@typescript-eslint/parser": "^3.5.0",
        "concurrently": "^5.2.0",
        "del": "^5.1.0",
        "eslint": "^7.3.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "faker": "^4.1.0",
        "gulp": "^4.0.2",
        "husky": "^4.2.5",
        "i18next-scanner": "^2.11.0",
        "i18next-scanner-typescript": "^1.0.3",
        "jest": "^26.1.0",
        "jest-environment-node": "^26.1.0",
        "lint-staged": "^10.2.11",
        "mongo-seeding": "^3.4.1",
        "mongodb-memory-server": "^6.6.7",
        "nock": "^13.0.2",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5",
        "pretty-quick": "^2.0.1",
        "ts-jest": "^26.1.1",
        "ts-node": "^8.10.2",
        "ts-transformer-imports": "^0.4.3",
        "ttypescript": "^1.5.10",
        "typescript": "^3.9.6"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn pretty-quick --staged && lint-staged"
        }
    }
}
